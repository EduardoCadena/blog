<%- include('../../partials/header.ejs')%>
<%- include('../../partials/navbar.ejs')%>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-primary" href="/admin/users/create">Novo Usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Email</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
           <% users.forEach( user => { %>
            <tr>
                <td><%= user.id %> </td>
                <td><%= user.email %></td>
                <td>
                    <a href="/admin/articles/edit/<%= user.id%>"  class="btn btn-warning">Editar</a>
                       
                    <form method="post" action="/articles/delete" style="display: inline"onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
           <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs')%>
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        console.log("O formulario não foi enviado");

        var decision = confirm("Você quer deletar este artigo?");

        if (decision) {
            form.submit();
        }
    }
</script>

